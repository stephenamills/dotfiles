{
  "[apex][css][graphql][html][javascript][javascriptreact][markdown][mdx][properties][svelte][tailwindcss][typescript][typescriptreact][vue][vue-html][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },

  "bashIde.shellcheckPath": "",

  "breadcrumbs.enabled": false,

  "debug.javascript.codelens.npmScripts": "never",

  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.definitionLinkOpensInPeek": false,
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "SF Mono",
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false, // Removes the space used mainly for debugging indicators.
  "editor.hover.sticky": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.selectionHighlight": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": "off",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",

  "eslint.lintTask.enable": true,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "files.associations": {
    "*.json": "jsonc"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 300,
  "files.autoSaveWhenNoErrors": true,
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.simpleDialog.enable": true,

  "git.autofetch": true,
  "git.defaultCloneDirectory": "~/projects",
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "push",

  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/CHANGELOG*": true,
    "**/dist/**": true,
    "**/LICENSE*": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true
  },

  "security.workspace.trust.enabled": false,

  "shellcheck.run": "manual",

  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cwd": "/Users/steph/projects",
  "terminal.integrated.persistentSessionReviveProcess": "never",

  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,

  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "update.mode": "manual",
  "update.showReleaseNotes": false,

  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.confirmSaveUntitledWorkspace": false,
  "window.title": "${rootName}",
  "window.titleBarStyle": "custom",

  "workbench.colorTheme": "Visual Studio Light",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 4,
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 10,
  "tlaplus.tlc.statisticsSharing": "share",
  "extensions.ignoreRecommendations": true,
}
