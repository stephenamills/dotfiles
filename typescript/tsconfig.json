{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./lib/cjs/",
    "rootDir": "./src/",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src"
  ]
}